<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.widget.LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popup_border">
    <!--android:background="@color/backgroundColor"-->


    <android.widget.LinearLayout
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/popup_shape"
        android:orientation="vertical">

        <EditText
            android:id="@+id/popup_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:hint="@string/job_title"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/popup_des"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:hint="@string/job_des"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/popup_pay"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:hint="@string/job_pay"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/popup_location"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:text="@string/location"
            android:textSize="18sp" />

        <fragment
            android:id="@+id/autocomplete_fragment_popup"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" />

        <fragment
            android:id="@+id/add_skills_frag_popup"
            android:name="com.example.oddjobs2.AddSkillsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/popup_post"
            style="@style/ButtonTeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:text="@string/post_job_button"
            android:textSize="22sp" />

    </android.widget.LinearLayout>

</android.widget.LinearLayout>
</ScrollView>